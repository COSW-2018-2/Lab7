<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:visibility="visible"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:visibility="visible"
        style="@style/AppTheme.CalButton.green"
        />

    <GridLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alignmentMode="alignBounds"
        android:columnCount="4"
        android:rowCount="6"
        tools:targetApi="ice_cream_sandwich">

        <Button
            android:id="@+id/num_7"
            style="@style/AppTheme.CalButton.blue"
            android:layout_column="0"
            android:layout_row="0"
            android:text="7"
            android:onClick="onClick"
            />


        <Button
            android:id="@+id/num_8"
            style="@style/AppTheme.CalButton.blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:text="8"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/num_9"
            style="@style/AppTheme.CalButton.blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:text="9"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/num_4"
            style="@style/AppTheme.CalButton.blue"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="4"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/num_5"
            style="@style/AppTheme.CalButton.blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:text="5"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/num_6"
            style="@style/AppTheme.CalButton.blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:text="6"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/sig_por"
            style="@style/AppTheme.CalButton.red"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:gravity="center"
            android:text="×"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/sig_div"
            style="@style/AppTheme.CalButton.red"
            android:layout_column="3"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:text="÷"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/num_1"
            style="@style/AppTheme.CalButton.blue"
            android:layout_column="0"
            android:layout_row="2"
            android:text="1"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/num_2"
            style="@style/AppTheme.CalButton.blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:text="2"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/num_3"
            style="@style/AppTheme.CalButton.blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:text="3"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/sig_sub"
            style="@style/AppTheme.CalButton.red"
            android:layout_column="3"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2"
            android:gravity="center"
            android:text="-"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/point"
            style="@style/AppTheme.CalButton.blue"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:gravity="center_horizontal"
            android:text="."
            android:onClick="onClick"/>

        <Button
            android:id="@+id/num_0"
            style="@style/AppTheme.CalButton.blue"
            android:layout_column="1"
            android:layout_row="3"
            android:text="0"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/sigchange"
            style="@style/AppTheme.CalButton.yellow"
            android:layout_column="3"
            android:layout_gravity="fill_horizontal"
            android:layout_row="4"
            android:text="+/-"
            android:onClick="onClick"
            />

        <Button
            android:id="@+id/sig_add"
            style="@style/AppTheme.CalButton.red"
            android:layout_column="3"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:text="+"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/sig_sin"
            style="@style/AppTheme.CalButton.pink"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="4"
            android:text="sin"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/sig_cos"
            style="@style/AppTheme.CalButton.pink"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="4"
            android:text="cos"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/sig_tan"
            style="@style/AppTheme.CalButton.pink"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="4"
            android:text="tan"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/sig_eq"
            style="@style/AppTheme.CalButton.blue"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="5"
            android:text="="
            android:onClick="onClick"/>



        <Button
            android:id="@+id/sig_ac"
            style="@style/AppTheme.CalButton.yellow"
            android:layout_column="3"
            android:layout_gravity="fill_horizontal"
            android:layout_row="5"
            android:text="AC"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/sig_sqrt"
            style="@style/AppTheme.CalButton.clear"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:text="√"
            android:onClick="onClick"/>

    </GridLayout>

</LinearLayout>