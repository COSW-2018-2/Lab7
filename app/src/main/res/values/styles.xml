<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
     <!--Customize your theme here.-->
  </style>

    <style name="AppTheme.CalButton" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.CalButton.green" parent="AppTheme.CalButton">
        <item name="android:background">@color/green</item>
    </style>
    <style name="AppTheme.CalButton.blue" parent="AppTheme.CalButton">
        <item name="android:background">@color/blue</item>
    </style>
    <style name="AppTheme.CalButton.red" parent="AppTheme.CalButton">
        <item name="android:background">@color/red</item>
    </style>

    <style name="AppTheme.CalButton.pink" parent="AppTheme.CalButton">
        <item name="android:background">@color/pink</item>
    </style>

    <style name="AppTheme.CalButton.yellow" parent="AppTheme.CalButton">
        <item name="android:background">@color/yellow</item>
    </style>

    <style name="AppTheme.CalButton.clear" parent="AppTheme.CalButton">
        <item name="android:background">@color/clear</item>
    </style>

</resources>
